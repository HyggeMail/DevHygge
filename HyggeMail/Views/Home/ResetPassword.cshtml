@model ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    .contact-page
    {
        background:none !important
    }
</style>
<section class="middle-content">
    <div class="wb-reset-pass reset-pass">
	<h1 class="text-center verfication_mesg">Reset Password</h1>
        <div class="container">
            <form>
                <div class="form-div">
                    @Html.HiddenFor(x=>x.UserId)
                    @Html.HiddenFor(x=>x.type)
                    <div class="form-group">
                        @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(x => x.NewPassword)
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                    </div>
                </div>
                <div class="bottom-sec">
                    <a href="javascript:" id="formRestorePassword" class="submit btn btn-primary">Set Password</a>
                </div>

            </form>
        </div>
    </div>
</section>
