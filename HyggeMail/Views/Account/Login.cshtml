@model Parking.BLL.Models.LoginModal
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
        .signup-section {
        background:url(@ViewBag.PageBanner) !important;
        padding:0 !important;
        }
</style>
@Html.Partial("_FunctionCallMessage")
<!--signup-->
<section class="signup-section sign-forgot">
    <div class="container">
        <div class="common-section">
            <figure><img src="~/Content/images/spin-logo.png" /></figure>
            <h4>Welcome USer<br /><strong>need help to login?</strong></h4>
            <form style="margin-bottom: 0 !important;" class="form-horizontal" id="loginForm">
                <div class="signin-row">
                    <div class="form-row">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Email*" })

                        <div id="email-error">@Html.ValidationMessageFor(m => m.UserName)</div>
                    </div>
                    <div class="form-row">
                        <label>Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password*" })
                        <div id="password-error">@Html.ValidationMessageFor(m => m.Password)</div>
                    </div>
                    <button class="signin-bttn" id="signInBtn" data-dismiss="modal" type="button">Sign In</button>
                </div>
                <div class="signin-row">
                    <div class="form-row">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-control" })
                        <label class="checkbox" for="Option">Remember me</label>
                    </div>
                    <div class="form-row">
                        <a href="@Url.Action("NeedHelp","Home")" class="help-login" target="_blank">Need help to login?</a>
                        <a href="@Url.Action("ForgetPassword","Account")">Forgot Password</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/Scripts/FrontEndScripts/registrations.js"></script>
}