@{
    ViewBag.Title = "Display Testimonial";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
@model AddTestimonialModel


<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="cl-mcont">
        @Html.Partial("_FunctionCallMessage")
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header">
                        <h3>@ViewBag.Title</h3>
                    </div>
                    <div class="content people-form-cs">
                        <div class="form-group">

                            <div class="row">
                                <div class=" col-md-12">
                                    <label for="inputEmail3" class="col-md-2 control-label">Title</label>
                                    <div class="col-md-8">
                                        @Model.Title
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class=" col-md-12">
                                    <label for="inputEmail3" class="col-md-2 control-label">Name</label>
                                    <div class="col-md-8">
                                        @Model.Name
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="inputEmail3" class="col-md-2 control-label">Image</label>
                                    <div class="col-md-10">
                                        <img id="UserImage" src="~/uploads/Testimonial/Thumb/@Model.ImageName" style="width:100px;height:75px;" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="inputEmail3" class="col-md-2 control-label">Description</label>
                                    <div class="col-md-10">
                                        @Html.Raw(Model.Description)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //initialize the javascript
            App.init();
        });
    </script>
}