@model AddUpdateAdminImageCategoryModel
@{
    ViewBag.Title = "Image Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="cl-mcont">
        @Html.Partial("_FunctionCallMessage")
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header">
                        <h3>@ViewBag.Title</h3>
                    </div>
                    <div class="content people-form-cs">
                        <form class="form-horizontal" role="form" id="ImageCategoryForm">
                            @Html.HiddenFor(x => x.ID)
                            <div class="form-group">
                            
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Name<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.CategoryName)
                                        </div>
                                    </div>

                                </div>
                                  <div class="row">
                                    <div class=" col-md-6">
                                        <div class="col-sm-offset-4 col-sm-8">
                                            <input type="button" class="btn btn-primary" id="addImageCategoryBtn" value="Submit" />
                                            <a href="@Url.Action("ManageImageCategory", "Image", new { area = "Admin" })" class="btn btn-default">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/themes/ckeditor.new/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
      
        });
        var siteURL = {
            AddUpdateImageCategory: '@Url.Action("AddUpdateImageCategory", "Image", new { area = "admin" })',
            GetImageCategoryPagingList: '@Url.Action("GetImageCategoryPagingList", "Image", new { area = "admin" })',
            ManageImageCategory: '@Url.Action("ManageImageCategory", "Image", new { area = "admin" })',
            };
    </script>
    <script src="~/Scripts/AdminScripts/ImageCategory.js"></script>
}