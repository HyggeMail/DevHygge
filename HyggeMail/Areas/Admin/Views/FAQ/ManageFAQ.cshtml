@{
    ViewBag.Title = "Manage FAQ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
@model PagingResult<FAQModel>
<div class="container-fluid" id="pcont">
    <div class="cl-mcont">
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="content">
                        <div class="table-responsive">
                            @Html.Partial("_SearchFilter", new PagingModel { SortBy = "UpdatedOn", SortOrder = "Desc" })
                            <div id="divResult">
                                <table class="table table-bordered" id="datatable-icons">
                                    <thead>
                                        <tr>
                                            <th class="sorting" data-sortby="Title">Title</th>
                                            @*<th class="sorting" data-sortby="Description">Description</th>*@
                                            <th class="sorting" data-sortby="CategoryID">Category</th>
                                            <th class="sorting" data-sortby="AddedOn">Added On</th>
                                            <th class="sorting" data-sortby="UpdatedOn">Last Updated</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @Html.Partial("Partials/_faqListing", Model)
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        @Html.Partial("_Paging")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/UserDefinedScripts/paging.js"></script>
    <script type="text/javascript">
        var totalCount = "@Model.TotalCount";
    </script>
    <script src="~/Scripts/AdminScripts/FAQ.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            //initialize the javascript
            App.init();
            faqs.Managefaqs(totalCount);
        });
        var siteURL = {
            UpdateOrderStatus: '@Url.Action("UpdateOrderStatus","PostCard",new{area="admin"})',
        }

    </script>
}





