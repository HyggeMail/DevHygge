@{
    ViewBag.Title = "AddEditPlan";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
@model MembershipModel
<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="cl-mcont">
        @Html.Partial("_FunctionCallMessage")
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header">
                        <h3>@ViewBag.Title</h3>
                    </div>
                    <div class="content people-form-cs">
                        <form class="form-horizontal" role="form" id="TemplateForm">
                            @Html.HiddenFor(x => x.ID)
                            <div class="form-group">

                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Name<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Name)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Rate<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Rate, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Rate)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Discount<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Discount, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Discount)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Cards Allocated<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.CardsAllocated, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.CardsAllocated)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Description<em>*</em></label>
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(x => x.Description)
                                            @Html.ValidationMessageFor(m => m.Description)
                                        </div>
                                    </div>
                                </div>
                              
                                <div class="row">
                                    <div class=" col-md-6">
                                        <div class="col-sm-offset-4 col-sm-8">
                                            <input type="button" class="btn btn-primary" id="addMembershipBtn" value="Submit" />
                                            <a href="@Url.Action("Managemembership", "MemberShip", new { area = "Admin" })" class="btn btn-default">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/themes/ckeditor.new/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
            CKEDITOR.env.isCompatible = true;
            CKEDITOR.config.allowedContent = true;
            CKEDITOR.replace('Description', {
                filebrowserImageBrowseUrl: '/Admin/ManageContent/UploadPartial',
                filebrowserImageUploadUrl: '/Admin/ManageContent/UploadImage'
            });
        });

    </script>
    <script src="~/Scripts/AdminScripts/Membership.js"></script>
}