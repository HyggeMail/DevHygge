@model AddUpdateRecipientModel
@{
    ViewBag.Title = "Edit Address";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
    
}
<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="cl-mcont">
        @Html.Partial("_FunctionCallMessage")
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header">
                        <h3>@ViewBag.Title</h3>
                    </div>
                    <div class="content people-form-cs">
                        <form class="form-horizontal" role="form" id="AddressBookForm">
                            @Html.HiddenFor(x => x.ID)
                            <div class="form-group">
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Category Name<em></em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Category)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">SubCategory Name<em></em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.SubCategory, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.SubCategory)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Author<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Name)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">KeywordFamousFor<em></em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.KeywordFamousFor, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.KeywordFamousFor)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Agency<em></em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Agency, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Agency)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Address Line 1<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Address)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">City<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.City)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">State<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.State, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.State)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Zip<em></em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Zip, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Zip)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">Country<em>*</em></label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Country)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-12">
                                        <label for="inputEmail3" class="col-md-2 control-label">AddressVerified<em></em></label>
                                        <div class="col-md-1">
                                            @Html.CheckBoxFor(x => x.AddressVerified, new { @class = "" })
                                            @Html.ValidationMessageFor(x => x.AddressVerified)
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class=" col-md-6">
                                        <div class="col-sm-offset-4 col-sm-8">
                                            <input type="button" class="btn btn-primary" id="UpdateBookAddress" value="Submit" />
                                            <a href="@Url.Action("ManageAddressBook", "AddressBook", new { area = "Admin" })" class="btn btn-default">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/AdminScripts/AdmnAddressBook.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
        });
    </script>
}
