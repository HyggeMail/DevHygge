@{
    ViewBag.Title = "Contact us";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
@model PagingResult<WebContactUsModel>
<div class="container-fluid" id="pcont">
    <div class="cl-mcont">
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header">
                        <h3>Contact us</h3>
                    </div>
                    <div class="content">
                        <div class="table-responsive">
                            @Html.Partial("_SearchFilter", new PagingModel { SortBy = "AddedOn", SortOrder = "Desc" })
                            <div id="divResult">
                                <table class="table table-bordered" id="datatable-icons">
                                    <thead>
                                        <tr>
                                            <th class="sorting" data-sortby="Name">Name </th>
                                            <th class="sorting" data-sortby="Email">Email</th>
                                            <th class="sorting" data-sortby="Phone">Phone</th>
                                            <th class="sorting" data-sortby="RequestType">RequestType</th>
                                            <th class="sorting" data-sortby="Message">Message</th>
                                            <th class="sorting" data-sortby="IsSubscriber">Newsletter Subscription</th>
                                            <th class="sorting" data-sortby="AddedOn">Added On</th>
                                            <th class="sorting" data-sortby="ResolvedOn">Resolve On</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @Html.Partial("Partials/_contactListing", Model)
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        @Html.Partial("_Paging")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/UserDefinedScripts/paging.js"></script>
    <script type="text/javascript">
        var totalCount = "@Model.TotalCount";
    </script>
    <script src="~/Scripts/FrontEndScripts/ContactUs.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            //initialize the javascript
            App.init();
        });
        var siteURL = {
            DeleteContactUs: '@Url.Action("DeleteContactUs", "ContactUs", new { area = "Admin" })',
            ResolvedContactUs: '@Url.Action("ResolvedContactUs", "ContactUs", new { area = "Admin" })',

        }
    </script>
}

