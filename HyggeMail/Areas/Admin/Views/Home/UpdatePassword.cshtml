@{
    ViewBag.Title = "Update Password";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}
@model ChangePasswordModel
<div class="container-fluid" id="pcont">
    <div class="cl-mcont">
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="content">
                        <form class="ChangePassword" role="form" id="ChangePassword">
                            <div class="col-form">
                                @Html.HiddenFor(x => x.userID)
                                <label>Old Password</label>
                                @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.OldPassword)
                            </div>
                            <div class="clear"></div>
                            <div class="col-form">
                                <label>New Password</label>
                                @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.NewPassword)
                            </div>
                            <div class="clear"></div>
                            <div class="col-form">
                                <label>Confirm New Password</label>
                                @Html.PasswordFor(x => x.NewConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.NewConfirmPassword)
                            </div>
                            <div class="clear"></div>
                            <br/>
                            <input type="button" class="btn btn-primary" id="btnUpdatePassword" value="Update" />
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/AdminScripts/Settings.js"></script>
    <script>
        var siteURL = {
            ChangePassword: "@Url.Action("ChangePassword", "Home", new { area = "admin" })",
            Login: "@Url.Action("Index", "Home", new { area = "admin" })",
        };
    
       $(document).ready(function () {
           //initialize the javascript
           App.init();
       }); 
    </script>
}
