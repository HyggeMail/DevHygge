@model PagingResult<BlogModel>

@{
    ViewBag.Title = "ManageBlog";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayOut.cshtml";
}


<div class="container-fluid" id="pcont">
    <div class="page-head">
        <h2>Manage Blog</h2>

    </div>
    <div class="cl-mcont">
        <div class="row">
            <div class="col-md-12">
                <div class="block-flat">
                    <div class="header">
                        <h3>Manage Blog</h3>
                    </div>
                    <div class="content">
                        <div class="table-responsive">
                            @Html.Partial("Partials/_SearchFilter", new PagingModel { SortBy = "AddedOn", SortOrder = "Desc" })
                            <div class="col-md-2 pull-right">
                                
                            </div>

                            <div id="divResult">
                                <table class="table table-bordered blog-table-admin" id="datatable-icons">
                                    <thead>
                                        <tr>
                                            <th class="sorting" data-sortby="Image">Image</th>
                                            <th class="sorting" data-sortby="Title">Title</th>
                                            <th class="sorting" data-sortby="Description">Description</th>
                                            <th class="sorting" data-sortby="AddedOn">Added On</th>
                                            <th class="sorting" data-sortby="IsFeaturedArticle">IsFeaturedArticle</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @Html.Partial("Partials/_blogListing", Model)
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        @Html.Partial("_Paging")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/UserDefinedScripts/paging.js"></script>
    <script type="text/javascript">
        var totalCount = "@Model.TotalCount";
    </script>
 
<script src="~/Scripts/AdminScripts/Blog.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            //initialize the javascript
            App.init();
            Blog.ManageBlog(totalCount);
        });

    </script>
<script type="text/javascript">
        var siteURL =
        {
            Blogs: '@Url.Action("AddBlogDetails", "Blog", new { @area = "admin" })',
            ManageBlog: '@Url.Action("ManageBlog", "Blog", new { @area = "admin" })',
            DeleteBlog: '@Url.Action("DeleteBlog", "Blog", new { @area = "admin" })',
            UpdateBlogDetails:'@Url.Action("UpdateBlogDetails", "Blog", new { @area = "admin" })'
        }
</script>

}





