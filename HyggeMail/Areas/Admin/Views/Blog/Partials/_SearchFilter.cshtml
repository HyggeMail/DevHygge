@model PagingModel
<div class="row ">
    <div class="blog-filter-admin">
        <div class="filter col-md-2">
            <label class="control-label">Show Records</label>
            <select class="form-control filter-select input-sm" id="showRecords">
                <option value="10" selected="selected">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="100">100</option>

            </select>
        </div>
        <div class="filter col-md-5 ss">
            <label class="control-label">Search</label>
            <div class="input-group">
                <span id="btnFilterPeople" class="input-group-addon green-search btn-primary">
                    <i class="fa fa-search white-search"></i>
                </span>
                @Html.HiddenFor(x => x.SortBy)
                @Html.HiddenFor(x => x.SortOrder)
                @Html.TextBoxFor(m => m.Search, new { @class = "form-control filter-textbox input-sm", placeholder = "Search" })

            </div>
            <input type="button" value="Search" id="btnSearchFilterPeople" class="btn btn-primary btn-sm" />
            <input type="button" value="Reset  " id="btnResetSearch" class="btn btn-primary btn-sm" />
        </div>
        <div class="filter col-md-3 pull-right add-blogg">
            <label class="control-label displayBlock">&nbsp;</label>

            <span class="cutom-checkbox"> <input type="checkbox" id="getFeaturedArticle" /><span class="btn btn-primary">Get Featured Article</span></span>
            <input type="hidden" id="hiddenIsFeaturedArticle" value="false" />

            <a href="@Url.Action("addblog","Blog" , new {area="Admin" })" cl class="form-control btn btn-primary btn-sm">ADD BLOG </a>
        </div>
    </div>
</div>
