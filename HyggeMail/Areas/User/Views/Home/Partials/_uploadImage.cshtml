@model AddUpdateAdminImageModel
<div class="modal modal-custom fade" id="myModal-UploadImage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Upload Image</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="ImageForm">
                    @Html.HiddenFor(x => x.ID)
                    <div class="form-group">

                        <div class="row">
                            <div class=" col-md-12">
                                <div class="col-md-12" style="float:left">
                                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control f-left", @placeholder = "Title" })
                                    @Html.ValidationMessageFor(x => x.Description)
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class=" col-md-12 imgggg">
                                @*<label for="inputEmail3" class="col-md-2 control-label">Image<em>*</em></label>*@
                                <div class="col-md-12">


                                    <div class="fileUpload custom-input">
                                        <span class="out-span"><img src="~/content/images/upload.png" alt=""> Upload</span>
                                        <input id="uploadFile" placeholder="No file selected" disabled="disabled" />
                                        @Html.TextBoxFor(x => x.Image, new
                                     {
                                         @class = "upload",
                                         @type = "file",
                                         @required = "required",
                                         @id = "uploadBtn"

                                     })
                                        @Html.ValidationMessageFor(x => x.Image)
                                    </div>
                                    <script>
                                        document.getElementById("uploadBtn").onchange = function () {
                                            document.getElementById("uploadFile").value = this.value;
                                        };
                                    </script>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class=" col-md-12">
                                <div class=" col-sm-12 btn-grpp text-center">
                                    <input type="button" class="btn btn-primary" id="addImageBtn" value="Submit" />
                                    <a href="javascript:" data-dismiss="modal" class="btn btn-primary cancel">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                  

                </form>

            </div>
        </div>
    </div>
</div>
