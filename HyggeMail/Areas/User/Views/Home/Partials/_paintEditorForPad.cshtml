
<li style="margin-top:10px;" class="paint-options">
    <div class="form-group half color-full color">
        <label> Color : </label>
        <span class="color-outer">
            <input class="jscolor {onFineChange:'ChangeColorFromColorPicker(this)',valueElement:null,value:'005e7a',closable:true,closeText:'Done!'} color-input" readonly="readonly" id="objColor">
        </span>


    </div>
    <span class="btnn-grps">

        <button id="drawing-circle" class="btn btn-info"><i class="fa fa-circle" aria-hidden="true"></i></button>
        <button id="drawing-Square" class="btn btn-info"><i class="fa fa-square" aria-hidden="true"></i></button>
        <button id="drawing-Rectangle" class="btn btn-info"><span class="rectangle"></span></button>
        <button id="drawing-Triangle" class="btn btn-info"><span class="triangle"></span></button>
        <button id="drawing-Line" class="btn btn-info"><span class="line"></span></button>
        <button id="drawing-Heart" class="btn btn-info"><i class="fa fa-heart" aria-hidden="true"></i></button>

        @*<button id="drawing-Arrow" class="btn btn-info"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>*@

    </span>
    <button id="drawing-mode" class="btn btn-info">Enter drawing mode</button>
</li>
<div style="display: none;" id="drawing-mode-options">
    <span class="draw-opt">
        <label for="drawing-mode-selector">Mode:</label>
        <select id="drawing-mode-selector">
            <option>Pencil</option>
            <option>Circle</option>
            <option>Spray</option>
            <option>Pattern</option>
            <option>hline</option>
            <option>vline</option>
            <option>square</option>
            <option>diamond</option>
            <option>texture</option>
        </select>
    </span>
    <span class="draw-opt">
        <label for="drawing-line-width">Line width:</label>
        <input type="range" value="30" min="0" max="150" id="drawing-line-width">
    </span>
    <div class="color-full color">
        <span class="draw-opt">
            <label for="drawing-color">Line color:</label>
            <span class="color-outer">
                <input class="jscolor {onFineChange:'ChangeLineColorFromColorPicker(this)',valueElement:null,value:'005e7a'} color-input" readonly="readonly">
            </span>
        </span>
    </div>
    <div class="color-full color">
        <span class="draw-opt">
            <label for="drawing-shadow-color">Shadow color:</label>
            <span class="color-outer">
                <input class="jscolor {onFineChange:'ChangeShadowColorFromColorPicker(this)',valueElement:null,value:'005e7a'} color-input" readonly="readonly">
            </span>
        </span>
    </div>
    <span class="draw-opt">
        <label for="drawing-shadow-offset">Shadow offset:</label>
        <input type="range" value="0" min="0" max="50" id="drawing-shadow-offset">
    </span>
    <span class="draw-opt">
        <label for="drawing-shadow-width">Shadow width:</label>
        <input type="range" value="0" min="0" max="50" id="drawing-shadow-width">
    </span>
</div>
