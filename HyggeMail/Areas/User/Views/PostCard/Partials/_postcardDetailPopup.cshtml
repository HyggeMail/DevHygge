@model AddUpdateImageEditorModel
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        @if (Model.CardFrontPath != null)
                        {
                            <img src="@Model.CardFrontPath.Replace("~", "../..")">
                        }
                    </div>
                    <div class="item">
                        @if (Model.CardBackPath != null)
                        {
                            <img src="@Model.CardBackPath.Replace("~", "../..")">
                        }
                    </div>
                </div>

            </div>
        </div>
        <div class="modal-footer">
            @if (Model.IsOrderPlaced != true)
            {
                <a href="@Url.Action("Dashboard", "Home", new { area = "user", cid = @Model.ID })">
                    <span class="edit-card" title="Edit Card">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </span>
                </a>
            }
            <a href="@Url.Action("CopyPostCard", "PostCard", new { area = "user", id = @Model.ID })">
                <span class="edit-card" title="Copy Card">
                    <i class="fa fa-files-o" aria-hidden="true"></i>
                </span>
            </a>
            @*<a href="javascript:">	<span class="edit-card" title="Copy Card"><i class="fa fa-files-o" aria-hidden="true"></i></span></a>*@
            <a href="javascript:" class="delete-card" data-id="@Model.ID"><i class="fa fa-trash" aria-hidden="true"></i></a>
        </div>
    </div>
</div>